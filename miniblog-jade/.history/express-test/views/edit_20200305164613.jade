extends layout
block css
  style(type="text/css").
    .comments {
      width:100%;/*自动适应父布局宽度*/
      overflow:auto;
      word-break:break-all;
      /*在ie中解决断行问题(防止自动变为在一行显示，主要解决ie兼容问题，ie8中当设宽度为100%时，文本域类容超过一行时，
      当我们双击文本内容就会自动变为一行显示，所以只能用ie的专有断行属性“word-break或word-wrap”控制其断行)*/
      }
    .bloglist{border-style:solid;border-color:red;height:100%;width:29%;float:left;}
    .content{border-style:solid;border-color:black;height:100%;width:69%;float:right;}
block content
    include includes/header.jade
    div.bloglist
        input(type="submit" value="新建博客")
    div.content
    
        h2 #{bolgtitle}
        form(METHOD=POST ACTION= " ")
        textarea(class="comments" rows="38" cols="10") #{bolgcontent}
    script.
        $(".username").hide();
    
    

