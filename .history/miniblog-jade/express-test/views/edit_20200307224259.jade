extends layout
block css
  style(type="text/css").
    .comments {
      width:calc(100% - 6px);/*自动适应父布局宽度*/
      height:calc(100% - 70px);
      overflow:auto;
      word-break:break-all;
      margin:0;
      /*在ie中解决断行问题(防止自动变为在一行显示，主要解决ie兼容问题，ie8中当设宽度为100%时，文本域类容超过一行时，
      当我们双击文本内容就会自动变为一行显示，所以只能用ie的专有断行属性“word-break或word-wrap”控制其断行)*/
    }
    html,body{height:100%;}
    .bloglistdiv{height:100%;border:1px solid #999999;float:left;display:block;min-width:210px;min-height:100%;}
    .contentdiv{border:1px solid #999999;height:100%;width:calc(100% - 240px);float:right;position:absolute;left:230px;}
    .contentbtn{float:right;height:14px;position:relative;border:1px solid #999999;height:20px;width:100%;margin:4px 2px;}
    .save{position:absolute;top:0px;right:0px}
    .check1,.check2{border:1px solid #999999;float:left;margin:10px 0px;padding:2px 6px;width:43%;}
    .formtitle{width:calc(100% - 6px);border:1px solid #999999;}
block content
    include includes/header.jade
    div.bloglistdiv
        input(type="submit" value="新建博客")
        div.check
