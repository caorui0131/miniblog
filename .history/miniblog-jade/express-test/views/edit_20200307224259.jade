        //- ul
        //-     each val in result
        //-         li 
                    a=val.id+"."+val.title
        
    div.contentdiv
        div.contentbtn
            //- input.save(type="submit" value="保存")
            input.publish(type="submit" value="发布")
            input.delete(type="submit" value="删除")
            input.unpublish(type="submit" value="下撤")
        h2 #{bolgtitle}
        form(action="/edit" method="post" id="editblogform")
            p.formid id：
            input.formid(type="text" name="id")
            p 标题：
            input.formtitle(type="text" name="title")
